        "BUILD_SHARED_LIBS": "ON",
        "BUILD_TESTING": "ON",
        "BUILD_EXAMPLES": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-x64-release",
