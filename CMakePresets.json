{
  "version": 3,
  "configurePresets": [
    {
      "name": "macos-x64-debug",
      "displayName": "macOS x64 Debug",
      "description": "Configure for macOS with clang toolchain (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/macos-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/macos-x64-debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "BUILD_SHARED_LIBS": "ON",
        "BUILD_TESTING": "ON",
        "BUILD_EXAMPLES": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "linux-x64-debug",
      "displayName": "Linux x64 Debug",
      "description": "Configure for Linux with gcc toolchain (Debug)",
